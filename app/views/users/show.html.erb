  <div class="profile-card">
    <div class="row">
      <i class="fa-solid fa-heart fa-2xl" style="color: #bebfc1; position: absolute; top: 50px; left: 310px;"></i>
      <%= link_to users_path, class: "user-card-link", style: "color: #ffffff;" do %>
        <i class="fa-solid fa-left-long" style="position: absolute; top: 20px; left: 20px;"></i>
      <% end %>
    </div>

    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key, class: 'profile-img' %>
    <% else %>
      <% random_avatar_url = "https://picsum.photos/500/500?random" %>
      <%= image_tag random_avatar_url, class: 'profile-img' %>
    <% end %>
    <div class="user-container" style="position: absolute; bottom: 5px">
      <h1 style="font-size: 50px;"><%= @user.name %></h1>
      <div class="d-flex align-items-center">
        <p style="font-size: 30px;"><%= @user.age %></p>
        <i class="fa-solid fa-heart fa-2xl" style="color: #bebfc1; position: absolute; left: 320px;"></i>
      </div>
    </div>
  </div>
  <div class="container mt-3">
    <p style="border: solid 1px; ">Description</p>
    <p style="color: #bebfc1; padding: 10px; line-height: 1.8;"><%= @user.description %></p>
  </div>
  <div class="container likes-movies">
    <h2>Liked Movies</h2>
    <div class="cards row col-12 mt-4">
      <div class="card-category">
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://m.media-amazon.com/images/I/81PJCFAgdkL._UF1000,1000_QL80_.jpg)"></div>
        <p>Moonlight</p>
      </div>

      <div class="card-category">
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://upload.wikimedia.org/wikipedia/pt/c/c0/La_La_Land_%28filme%29.png)"></div>
        <p>La La Land</p>
      </div>

      <div class="card-category">
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://m.media-amazon.com/images/M/MV5BMTc2MTQ3MDA1Nl5BMl5BanBnXkFtZTgwODA3OTI4NjE@._V1_.jpg)"></div>
        <p>The Martian</p>
      </div>
    </div>
  </div>
</div>
