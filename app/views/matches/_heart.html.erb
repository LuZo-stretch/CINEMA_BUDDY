<div id="heart-<%= user.id  %>">
  <i class="fa-solid fa-heart btn <%= current_user.liked_me_back?(user) ? ' heart-red' : 'fa-heart' %>"
    data-controller="like"
    data-like-match-id-value="<%= current_user.get_match_id(user) %>"
    data-like-match-value="<%= current_user.liked_me_back?(user) %>"
    data-like-user-id-value="<%= user.id %>"
    data-action="click->like#toggle"
    data-like-target="heartIcon"
    style="position: absolute; right: 10px; bottom: 25px;">
  </i>
</div>
