<h2>Edit Profile</h2>

<%= simple_form_for(@profile, url: profile_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :age, required: true, as: :integer %>
    <%= f.input :description, required: false, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Profile" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
